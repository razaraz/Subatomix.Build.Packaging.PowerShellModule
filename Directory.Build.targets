  <!--
    * Imported late: project -> SDK .targets -> NuGet package .targets -> this
    * Override properties and targets here.
    https://docs.microsoft.com/en-us/visualstudio/msbuild/customize-your-build
  -->

  <ItemGroup Condition="$(IsPackable)">
    <None Include="..\icon.png" Link="Properties\icon.png"
          Pack="true" PackagePath="" CopyToOutputDirectory="Never" />
    <None Include="..\LICENSE.txt" Link="Properties\LICENSE.txt"
          Pack="true" PackagePath="$(PackageLicenseFile)" CopyToOutputDirectory="Never" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Subatomix.Build.Versioning.Semantic" Version="0.0.0-pre.7">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>build</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <!-- Simulate a reference to the package from the test project. -->
  <Import Project="$(MSBuildThisFileDirectory)src\Subatomix.Build.Packaging.PowerShellModule.targets"
          Condition="'$(MSBuildProjectName)' == 'Subatomix.Build.Packaging.PowerShellModule.Tests'" />

  <Target Name="_CheckIfWillCreatePackage" BeforeTargets="GenerateNuspec"
          Condition="'$(IsPackable)' == 'true' And '$(ContinuePackingAfterGeneratingNuspec)' == 'true'"
          Inputs="@(NuGetPackInput)" Outputs="@(NuGetPackOutput)">
    <!-- https://docs.microsoft.com/en-us/visualstudio/msbuild/incremental-builds#determine-whether-a-target-has-been-run -->                       
    <CreateProperty Value="true">
      <Output PropertyName="_WillCreatePackage" TaskParameter="ValueSetByTask" />
    </CreateProperty>
  </Target>

  <Target Name="RemoveCachedPackage" AfterTargets="GenerateNuspec"
          Condition="'$(_WillCreatePackage)' == 'true'">
    <PropertyGroup>
      <CachedPackageDir>$([MSBuild]::EnsureTrailingSlash("$(NuGetPackageRoot)"))$(PackageId)\$(PackageVersion)</CachedPackageDir>
    </PropertyGroup>
    <RemoveDir Directories="$(CachedPackageDir)" ContinueOnError="true" />
    <Message Importance="high" Text="Removed cached package $(CachedPackageDir)" />
  </Target>

  <Target Name="PrintPackageFiles" AfterTargets="GenerateNuspec">
    <Message Importance="high" Text="_PackageFiles: %(_PackageFiles.Identity)" />
  </Target>

</Project>
